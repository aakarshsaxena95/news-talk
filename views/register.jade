extends layout
block contains
	.other-header
		h1 Login
		br
		center
			form(role='form', action="/register",method="post", style='max-width: 300px;')
				.form-group
					input.form-control(type='text', name="username", placeholder='Enter Username')
				.form-group
					input.form-control(type='email', name="email", placeholder='Enter Email ID')
				.form-group
					input.form-control(type='password', name="password", placeholder='Password')
				button.btn.btn-default.btn-large(type='submit') Submit