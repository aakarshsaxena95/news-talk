doctype html
html(ng-app='newstalk')
  head
    title News Talk
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/style.css')
    script(src='/js/jquery.min.js')
    script(src='/js/angular.min.js')
    script(src='/js/main.js')
    script(src='/js/dataService.js')
    script(src='/js/controllers/readinglistctrl.js')
    script(src='/js/ng-infinite-scroll.min.js')

    link(href='http://fonts.googleapis.com/css?family=Brawler' rel='stylesheet' type='text/css')
  body
    .container
      .heading
        center
          div
            h1.header 
              a(href="/") News Talk
          .subheader
            h5 A  platform  for  discussions  about  the  latest  and  trending  news.
      .navigation
        hr#top-line
        ul.list-inline
          li.navlinks 
            a(href="/top") Top Stories
          li.navlinks 
            a(href="/") Latest News
          li.navlinks
            a(href="/tags") Tags
          if (!user)
            li.navlinks.name
              a(href="/login") Login
            li.navlinks.name
              a(href="/register") Register  
          if (user)
            li.navlinks
              a(href="/readinglist") Reading List
            li.navlinks.name
              a(href="/logout") Logout
            li.navlinks.name
              p Hi, #{user.name}
            
        hr#bottom-line
      block contains
      #footer.row
        .col-md-4.leftborder
          h2#footer-heading News Talk
        .col-md-4.leftborder
          ul.list.list-unstyled
            li
              a() Contact Us

        .col-md-4.leftborder
          ul.list.list-unstyled
            li
              a() about us
            li
              a() about us
            li
              a() about us
            li
              a() about us
            li
              a() about us



